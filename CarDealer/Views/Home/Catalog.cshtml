<table class="table">
    <tr>
        <th class="header-3">
            Manufacturer
        </th>
        <th class="header-3">
            Country
        </th>
        <th class="header-3">
            Type
        </th>
        <th class="header-3">
            Model
        </th>
        <th class="header-3">
            Price
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Cars)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.manufacturer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            <p><a href="/Home/AddToCart/@item.car_id">В корзину</a></p>
        </td>
    </tr>
    }
</table>
<br />

<div class="btn-group">
    @Html.PageLinks(Model.PageInfo, x => Url.Action("Catalog", new { page = x }))
</div>

<p><a href="/Home/CartBrowse">Просмотр корзины</a></p>

