@model CarDealer.Models.Paging.CarIndexView
@using CarDealer.Models.Paging

@{
    ViewBag.Title = "Catalog";
}

<h2>Catalog</h2>


<label class="control-panel header-3">
    Фильтр авто
</label>

<form method="get">
    <div class="form-inline">
        <div class="row">
            <div class="col-md-2">
                <h5 class="header-3" style="text-align:center"><strong>Производитель</strong></h5>
                <input list="manufacturerList" name="manufacturerList" autofocus>
                <datalist id="manufacturerList">
                    <option value="BMW">
                    <option value="Audi">
                    <option value="Fiat">
                    <option value="Opel">
                    <option value="Skoda">
                    <option value="Volkswagen">
                    <option value="Volvo">
                </datalist>
            </div>

            <div class="col-md-2">
                <h5 class="header-3" style="text-align:center"><strong>Модель</strong></h5>
                @Html.TextBox("model", "")
            </div>

            <div class="col-md-2">
                <h5 class="header-3" style="text-align:center"><strong>Тип</strong></h5>
                <p> @Html.TextBox("type", "") </p>
            </div>

            <div class="col-md-2 col-md-push-2">
                <h5 class="header-3">Критерий</h5>
                <select name="relationList">
                    <option value="<"><</option>
                    <option value="<="><=</option>
                    <option value=">">></option>
                    <option value=">=">>=</option>
                    <option value=""selected></option>
                </select>
            </div>

            <div class="col-md-2 col-md-offset-1">
                <h5 class="header-3" style="text-align:center"><strong>Цена</strong></h5>
                <p> @Html.TextBox("price", "") </p>
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-md-1">
                <input type="submit" value="Получить">
            </div>
            <div class="col-md-1">
                <input type="reset" value="Все авто" />
            </div>
        </div>
    </div>
</form>

