@model CarDealer.Models.Paging.CarIndexView
@using CarDealer.Models.Paging

@{
    ViewBag.Title = "Catalog";
}

<h2>Catalog</h2>


<form method="get">
    <div class="form-inline">
        <label class="control-panel header-3">
            Фильтр авто
        </label>

        <div class="row">
            <div class="col-md-2">
                <h5 class="header-3">Производитель</h5>
                    <input list="manufacturerList" name="manufacturerList" autofocus>
                    <datalist id="manufacturerList">
                        <option value="BMW">
                        <option value="Audi">
                        <option value="Fiat">
                        <option value="Opel">
                        <option value="Skoda">
                        <option value="Volkswagen">
                        <option value="Volvo">
                    </datalist>
            </div>
            
            <div class="col-md-2">
                <h5 class="header-3">Модель</h5>
                @Html.TextBox("model", "")
            </div>
            
            <div class="col-md-2">
                <h5 class="header-3">Тип</h5>
                <p> @Html.TextBox("type", "") </p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-1">
                <p>3</p>
                <input type="radio" name="pageSizes" value="3">
            </div>
            <div class="col-md-1">
                <p>5</p>
                <input type="radio" name="pageSizes" value="5">
            </div>
            <div class="col-md-1">
                <p>8</p>
                <input type="radio" name="pageSizes" value="8">
            </div>
            <div class="col-md-1">
                <p>all</p>
                <input type="radio" name="pageSizes" value="50">
            </div>
        </div>

        <!--<input type="range" name="pageSizes" min="3" max="50"/>-->
        <br />

        <div class="row">
            <div class="col-md-1">
                <input type="submit" value="Получить">
            </div>
            <div class="col-md-1">
                <input type="reset" value="Отчистить">
            </div>
        </div>
    </div>
</form>

<br/>

<table class="table">
    <tr>
        <th class="header-3">
            Manufacturer
        </th>
        <th class="header-3">
            Country
        </th>
        <th class="header-3">
            Type
        </th>
        <th class="header-3">
            Model
        </th>
        <th class="header-3">
            Price
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Cars)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
        </tr>
    }
</table>
<br/>

<div class="btn-group">
    @Html.PageLinks(Model.PageInfo, x => Url.Action("Catalog", new { page = x }))
</div>


