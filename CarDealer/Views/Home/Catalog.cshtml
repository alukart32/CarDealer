@model CarDealer.Models.Paging.CarIndexView
@using CarDealer.Models.Paging

@{
    ViewBag.Title = "Catalog";
}

<h2>Catalog</h2>


<form method="get">
    <div class="form-inline">
        <label class="control-panel header-3">
            Фильтр авто
        </label>

        <div class="row">
            <div class="col-md-2">
                <h5 class="header-3">Производитель</h5>
                <input list="manufacturerList" name="manufacturerList" autofocus>
                <datalist id="manufacturerList">
                    <option value="BMW">
                    <option value="Audi">
                    <option value="Fiat">
                    <option value="Opel">
                    <option value="Skoda">
                    <option value="Volkswagen">
                    <option value="Volvo">
                </datalist>
            </div>

            <div class="col-md-2">
                <h5 class="header-3">Модель</h5>
                @Html.TextBox("model", "")
            </div>

            <div class="col-md-2">
                <h5 class="header-3">Тип</h5>
                <p> @Html.TextBox("type", "") </p>
            </div>

            <div class="col-md-2">
                <h5 class="header-3">Сравнить как</h5>
                <input list="relationList" name="relationList">
                <datalist id="relationList">
                    <option value="<">
                    <option value="<=">
                    <option value=">">
                    <option value=">=">
                    <option value="=">
                </datalist>
            </div>

            <div class="col-md-2">
                <h5 class="header-3">Цена</h5>
                <p> @Html.TextBox("price", 1) </p>
            </div>

        </div>
   
        <br />
        
        <div class="row">
            <div class="col-md-1">
                <input type="submit" value="Получить">
            </div>
            <div class="col-md-1">
                <input type="reset" value="Обнулить">
            </div>
        </div>
    </div>
</form>

